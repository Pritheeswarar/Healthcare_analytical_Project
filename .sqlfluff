[sqlfluff]
# Target SQL Server syntax.
dialect = tsql
# Skip automated tests while patterns settle.
exclude_paths = sql/04_tests/**
# Provide headroom for verbose KPI queries.
max_line_length = 120

[sqlfluff:rules:capitalisation.keywords]
# Enforce UPPER CASE SQL keywords (`SELECT`, `JOIN`, etc.).
capitalisation_policy = upper

[sqlfluff:rules:aliasing.column]
# Require aliases for computed columns to aid downstream references.
force_column_aliases = true

[sqlfluff:rules:aliasing.table]
# Require explicit aliases for table references in FROM/JOIN clauses.
force_explicit_aliases = true

[sqlfluff:rules:convention.join_condition]
# Flag legacy comma joins so analysts convert them to explicit JOIN syntax.
forbid_where_join = true
